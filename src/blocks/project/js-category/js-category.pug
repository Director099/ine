mixin js-category
  .filter-group
    +tab-filter
      +tab-filter-item('Всё', 'all', true)
      +tab-filter-item('Все для пряжи', 'yarn')
      +tab-filter-item('Швейная фурнитура', 'hardware')
      +tab-filter-item('Товары для рукоделия', 'needlework')
    .swiper-container-relative
      .swiper-container.js-category
        .swiper-wrapper
          .swiper-slide(data-filter="yarn")
            +category({
                img: 1,
                title: 'Пряжа'
            })
          .swiper-slide(data-filter="yarn")
            +category({
                img: 2,
                title: 'Для вязания'
            })
          .swiper-slide(data-filter="yarn")
            +category({
                img: 3,
                title: 'Журналы'
            })
          .swiper-slide(data-filter="hardware")
            +category({
                img: 4,
                title: 'Иглы <br> и булавки'
            })
          .swiper-slide(data-filter="hardware")
            +category({
                img: 5,
                title: 'Материалы'
            })
          .swiper-slide(data-filter="needlework")
            +category({
                img: 6,
                title: 'Алмазная <br> мозаика'
            })
          .swiper-slide(data-filter="needlework")
            +category({
                img: 1,
                title: 'Пряжа'
            })
